[Unit]
Description=YouTube Data Extractor for Sri Lanka
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/opt/youtube-extractor
Environment=PATH=/opt/youtube-extractor/venv/bin
ExecStart=/opt/youtube-extractor/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target